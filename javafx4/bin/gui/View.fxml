      <Button fx:id="btSum" layoutX="29.0" layoutY="196.0" mnemonicParsing="false" onAction="#onBtSumAction" text="SUM" />
      <Label layoutX="31.0" layoutY="248.0" text="Result = ">
         <font>
            <Font name="System Bold" size="12.0" />
